import java.util.Scanner;

public class Main {
    public static void main(String[] args) {




    Scanner leitor = new Scanner(System.in);

        System.out.println("Qual é o dia do seu nascimento?");
        int dia = leitor.nextInt();
        leitor.nextLine(); //pro buffer nao sobrar no computador

        System.out.println("Qual é o número do mês que vocÊ nasceu?");
        int mes = leitor.nextInt();
        leitor.nextLine(); //pro buffer nao sobrar no computador

        System.out.println("Qual é o ano do seu nascimento?");
        int ano = leitor.nextInt();
        leitor.nextLine(); //pro buffer nao sobrar no computador

                System.out.println("Sua data de nascimento completa é: " + dia + "/" + mes + "/" + ano);


